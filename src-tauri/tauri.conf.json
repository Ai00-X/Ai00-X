{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ai00-X",
  "version": "0.1.1",
  "identifier": "com.cgisk.ai00-x",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ai00-X",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi", "appimage", "app"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk3ODAzQkEzOEU5RUYxQjkKUldTNThaNk9venVBbC96UEZGL3R5R2RvVnVSQS92WmloVEJhQTIxMnFnVkdnMmFuT2Rsb29CbDYK",
      "endpoints": [
        "https://github.com/Ai00-X/Ai00-X/releases/latest/download/latest.json"
      ]
    },
    "shell": {
      "scope": [
        { "name": "powershell", "cmd": "powershell" },
        { "name": "sh", "cmd": "sh" }
      ]
    },
    "upload": {
      "scope": [
        "https://*",
        "http://localhost:*"
      ]
    }
  }
}
